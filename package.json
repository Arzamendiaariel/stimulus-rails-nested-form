    "@hotwired/stimulus": "^3.0.1",
    "@testing-library/dom": "^8.11.3",
    "@types/jest": "^27.4.0",
    "babel-jest": "^27.4.6",
    "jest": "^27.4.7",
    "mutationobserver-shim": "^0.3.7",
    "np": "^7.6.0",
    "prettier-standard": "16.4.1",
    "typescript": "^4.5.5",
    "vite": "^2.7.13"
